{
  "name": "ofd-viewer-nestjs",
  "version": "1.0.0",
  "description": "OFD file viewer with NestJS + TypeScript (backend + frontend)",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "dev": "nest start --watch",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "postinstall": "echo 'postinstall complete'"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "fast-xml-parser": "^4.4.1",
    "jszip": "^3.10.1",
    "lru-cache": "^10.3.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.15.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.4",
    "svg-to-pdfkit": "^0.1.8",
    "dayjs": "^1.11.13",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "@types/pdfkit": "^0.12.7",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
